<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
     >

    <CheckBox
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/checkBoxLoud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Loud Noise/ Voice"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#359CFC" />

    <CheckBox
        android:id="@+id/checkBoxCall"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Caller ID"
        android:textColor="#359CFC"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        

    <CheckBox
        android:id="@+id/checkBoxMusic"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     Pause Music"
        android:textColor="#359CFC"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensitivity"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="#359CFC"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/sensitivityBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />
</LinearLayout>